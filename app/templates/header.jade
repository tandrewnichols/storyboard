.navbar(ng-class="{ 'navbar-default': !$root.member.inverse, 'navbar-inverse': $root.member.inverse }")
  .navbar-header
    button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-responsive-collapse")
      span.icon-bar
      span.icon-bar
      span.icon-bar
    a.navbar-brand(href="/") Storyboard
  .navbar-collapse.collapse.navbar-responsive-collapse
    ul.nav.navbar-nav
      li.dropdown(ng-if="$root.isDev")
        a.dropdown-toggle(href="#", data-toggle="dropdown")
          | Dev Tools&nbsp;
          b.caret
        ul.dropdown-menu
          li: a(href="#", data-toggle="modal", data-target="#dump-modal") Data Dump
    ul.nav.navbar-nav.navbar-right(ng-show="$root.member")
      li.dropdown
        a.dropdown-toggle(href="#", data-toggle="dropdown", style="width:100%; background-image: url('{{ member.gravatar }}&s=32'); background-repeat:no-repeat; padding-left: 50px; background-position: 10px 50%; background-size: 32px;")
          span &nbsp;&nbsp;{{ member.penname }}&nbsp;&nbsp;
          b.caret
        ul.dropdown-menu
          li: a(href="#", ui-sref="profile.personal") Profile
      li
        a(href="#", ng-controller="Logout", ng-click="logout()")
          span.glyphicon.glyphicon-log-out
          span &nbsp;&nbsp;Logout
    ul.nav.navbar-nav.navbar-right(ng-show="!$root.loadingMember && !$root.member")
      li: a(href="#", ui-sref="join") Join
      li: a(href="#", ui-sref="login") Login
div(ng-if="isDev", ng-include="'modals/dump.html'")

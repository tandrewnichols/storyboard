.well(ng-if="author", ng-init="update={ theme: author.theme, inverse: author.inverse }")
  .row
    .col-xs-1(style="margin-top: 9px;") Theme
    .col-xs-11
      .btn-group
        a.btn.btn-primary(href="#", data-toggle="dropdown") {{ update.theme }}
        a.btn.btn-primary.dropdown-toggle(href="#", data-toggle="dropdown")
          span.caret
        ul.dropdown-menu
          li: a(href="#", ng-click="update.theme='cerulean'") Cerulean
          li: a(href="#", ng-click="update.theme='darkly'") Darkly
          li: a(href="#", ng-click="update.theme='flatly'") Flatly
          li: a(href="#", ng-click="update.theme='sandstone'") Sandstone
          li: a(href="#", ng-click="update.theme='slate'") Slate
          li: a(href="#", ng-click="update.theme='spacelab'") Spacelab
  .row.mtl
    .col-xs-1(style="margin-top: 9px;") Inverse
    .col-xs-10
      input(type="checkbox", bs-switch="", ng-model="update.inverse")
  .row.mtx
    .col-sm-offset-1.col-xs-2
      button.btn.btn-primary.btn-block(ng-click="submit(update)", type="submit", ng-disabled="update.theme === author.theme && update.inverse === author.inverse") Submit
  .row.mtl
    .col-xs-12
      em.text-muted * Changes will not take affect until you refresh the page.
